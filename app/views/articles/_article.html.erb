<div id="<%= dom_id article %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= article.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= article.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cover:</strong>
    <% if article.cover.present? %>
      <%= image_tag article.cover, alt: "Cover image", class: "rounded-lg shadow-md w-auto h-20" %>
    <% else %>
      <span>No cover image available</span>
    <% end %>
  </p>

</div>
