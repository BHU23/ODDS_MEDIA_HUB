<div id="<%= dom_id video %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= video.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= video.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Video:</strong>
    <% if video.video_url =~ URI::DEFAULT_PARSER.make_regexp %>
      <%= video_tag video.video_url, controls: true %>
    <% else %>
      <span class="text-red-500">Invalid video URL</span>
    <% end %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Video url:</strong>
    <% if video.cover.attached? %>
      <%= image_tag video.cover, alt: "Cover image", class: "rounded-lg shadow-md w-auto h-20" %>
    <% else %>
      <span>No cover image available</span>
    <% end %>
  </p>

</div>
